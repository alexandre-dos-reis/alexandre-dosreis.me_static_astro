---
interface Props {
  href: string;
  imageSrc: string;
  title: string;
  content: string;
}

const { href, imageSrc, title, content } = Astro.props;
---

<div
  class="w-full grid grid-cols-1 md:grid-cols-2 mb-6 gap-6 rounded-lg"
>
  <a href={href} class="overflow-hidden rounded-lg" target="_blank" rel="noreferrer noopener"
    ><img
      src={imageSrc}
      class="w-full h-full object-cover transition-all opacity-70 hover:opacity-30 hover:scale-105"
    />
  </a>
  <div class="mx-6 mb-6 md:m-5 md:ml-0">
    <h3 class="mt-0 font-normal">
      <a href={href} target="_blank" rel="noreferrer noopener">{title}</a>
    </h3>
    <p>{content}</p>
    <!-- <p class="mb-0">NextJS, React, Directus</p> -->
  </div>
</div>
