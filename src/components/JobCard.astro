---
import type { ImageMetadata } from "astro";
import Link from "./Link.astro";
import { Image } from 'astro:assets'

interface Props {
  href: string;
  image: ImageMetadata;
  title: string;
  content: string;
}

const { href, image, title, content } = Astro.props;
---

<Link href={href} class="relative overflow-hidden rounded-lg group">
  <Image
    src={image}
    alt=""
    class="h-full w-100 object-cover transition-all opacity-60 group-hover:opacity-20 group-hover:scale-105"
  />
  <div class="absolute bottom-0 group-hover:text-white text-sm m-3">
    <h4 class="mt-0 font-bold">{title}</h4>
    <p class="font-bold">{content}</p>
  </div>
</Link>
