---
import type { NestedMH } from "src/utils/types";
import { table } from "src/utils/nav-table-margin";

interface Props {
  headings: NestedMH[];
}

const { headings } = Astro.props;
---
{
  headings.length > 0 ? (
    <ul class="list-none overflow-y-auto nav nav-pills menu-sidebar">
  {
    headings.map((h) => (
      <li class="mb-[.4rem]">
        <a
          href={`#${h.slug}`}
          class={`nav-link text-gray-500 hover:text-white ${
            table[h.depth]
          } block`}
        >
          {h.text}
        </a>
        <Astro.self headings={h.children || []} />
      </li>
    ))
  }
</ul>) : (<></>)}

